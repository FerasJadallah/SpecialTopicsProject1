<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <!--===== Boxicons CSS =====-->
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    @Styles.Render("~/Layout/css")
    @Scripts.Render("~/Layout/js")

</head>
<body>
    <nav style="display: inline-block;">
        <ul class="sidebar">
            <li onclick="closesidebar()">
                <a href="#">
                    <span class="material-symbols-outlined">
                        close
                    </span>
                </a>
            </li>
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a href="@Url.Action("FileList", "Home")">Documents</a></li>
            <li><a href="@Url.Action("Setting", "Home")">Setting</a></li>
            @*<li><a href="@Url.Action("Login", "Home")">Sign up</a></li>*@
        </ul>
        <ul>
            <li><a href="@Url.Action("Index", "Home")"><img class="img-01" src="~/Images/logo.PNG"></a></li>
            <li class="hideOnMobile">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "hideOnMobile" })</li>
            <li class="hideOnMobile">@Html.ActionLink("Documents", "FileList", "Home", new { area = "" }, new { @class = "hideOnMobile" })</li>
            <li class="hideOnMobile">@Html.ActionLink("Setting", "Setting", "Home", new { area = "" }, new { @class = "hideOnMobile" })</li>
            @*<li class="hideOnMobile">@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "hideOnMobile" })</li>*@
            @Html.Partial("Login_part")


            <li class="menu" onclick="showsidebar()">
                <a href="#">
                    <span class="material-symbols-outlined">
                        menu
                    </span>
                </a>
            </li>
        </ul>
    </nav>
   
    <div  class="fluid-container body-content">
        @RenderBody()
       

        <footer class="footer" >
           
                <div class="Email-Address">
                    <div class="Email">Email Address: <a href="mailto:info@decentraldoc.com">info@decentraldoc.com</a></div>
                </div>
                <div class="footer-bottom footer-bottom" >
                    <p>&copy; 2023 IndieStore. All rights reserved.</p>
                </div>
            
        </footer>
        
    </div>

    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
