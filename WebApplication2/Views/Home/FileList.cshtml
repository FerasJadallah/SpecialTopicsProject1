        </ul>
    </div>
    <div class=" div-04 select-menu">
        <div class="select-btn">
            <span class="sBtn-text">Type</span>
            <i class="bx bx-chevron-down"></i>
        </div>
        <ul class="options">
            <li class="option">
                <i class="bx bxl-github" style="color: #171515;"></i>
                <span class="option-text">Type</span>
            </li>
            <li class="option">
                <i class="bx bxl-instagram-alt" style="color: #E1306C;"></i>
                <span class="option-text">PDF</span>
            </li>
            <li class="option">
                <i class="bx bxl-linkedin-square" style="color: #0E76A8;"></i>
                <span class="option-text">EXE</span>
            </li>
        </ul>
    </div>
    <div style="clear:left;"></div>

</div>





<script>
    // Select all select-menu elements
    const optionMenus = document.querySelectorAll(".select-menu");

    // Loop through each select-menu
    optionMenus.forEach(optionMenu => {
        // Select relevant elements within each select-menu
        const selectBtn = optionMenu.querySelector(".select-btn");
        const options = optionMenu.querySelectorAll(".option");
        const sBtn_text = optionMenu.querySelector(".sBtn-text");

        // Add click event listener to toggle active class on click
        selectBtn.addEventListener("click", () => {
            optionMenu.classList.toggle("active");
        });

        // Add click event listener to each option
        options.forEach(option => {
            option.addEventListener("click", () => {
                let selectedOption = option.querySelector(".option-text").innerText;
                sBtn_text.innerText = selectedOption;
                optionMenu.classList.remove("active");
            });
        });
    });
</script>
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}
<h1 class="fortitle" style="margin-top: 4%; color: #4CAF50; font-family: 'Arial', sans-serif; font-size: 24px; text-transform: uppercase; letter-spacing: 2px; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); font-size: 50px;">Document List</h1>
<table>
    <tr>
        <th>File Name</th>
        <th>Ethereum Hash</th>
        <th>Version</th>
    </tr>
    @foreach (var file in Model)
    {
        <tr>
            <td>@file.FileName</td>
            <td>@file.EthHash</td>
            <td>@file.Version</td>
        </tr>
    }
</table>
<div class="upload-container">


    @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <label for="file">Upload a file:</label>
        <input type="file" name="File" id="file" />
        <label for="fileName">File Name:</label>
        <input type="text" name="FileName" id="fileName" />
        <input type="submit" value="Upload" />
    }

</div>
<div class="download-container">
    <h2>Download</h2>

    @using (Html.BeginForm("Download", "Home", FormMethod.Get))
    {
        <label for="ethHash">Enter the Ethereum hash of the file:</label>
        <input type="text" name="ethHash" id="ethHash" />
        <input type="submit" value="Download" />
    }
</div>